{
  "name": "healthcheck",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "validate": "npm run format:check && npm run lint && npm run type-check && npm run test",
    "clean": "rm -rf .next out node_modules/.cache",
    "audit:fix": "npm audit fix",
    "update": "npm update",
    "prepare": "husky"
  },
  "keywords": [
    "health",
    "fitness",
    "calculator",
    "bmi",
    "body-fat",
    "tdee",
    "nutrition",
    "wellness",
    "next.js",
    "react"
  ],
  "author": "HealthCheck Team",
  "license": "UNLICENSED",
  "description": "Free health and fitness calculators for BMI, body fat, TDEE, and more. Built with Next.js, TypeScript, and TailwindCSS.",
  "dependencies": {
    "@radix-ui/react-radio-group": "^1.2.3",
    "@sentry/nextjs": "^10.34.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-intersection-observer": "^9.16.0",
    "tailwind-merge": "^3.0.2",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.14",
    "baseline-browser-mapping": "^2.9.15",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.4",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
